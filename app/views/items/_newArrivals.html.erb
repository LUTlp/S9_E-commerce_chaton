<div class="container pt90 pb60">
	<div class="title-heading1 mb40">
		<h3>Nouveaux arrivants</h3>
	</div>
	<div class="row">
		<% @items.first(8).each do |item| %>
			<div class="col-md-6 col-lg-3 mb40">
				<%= link_to item_path(item.id) do %>
					<p class="simple-hover">
						<img src="<%= item.image_url %>" alt="" class="img-fluid">
					</p>
					<div class="clearfix product-meta">
						<p class="lead mb0"><%= item.title %></p>
						<%end%>
						<h4 class=""><%= item.price %> â‚¬</h4>
						<span><%= button_to 'Ajouter au panier', line_items_path(item_id: item), class: 'btn btn-success' %></span>
					</div>

			</div><!--/col-->
		<% end %>
	</div>
</div>
