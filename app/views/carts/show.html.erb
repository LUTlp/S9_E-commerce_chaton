<div class="page-titles title-dark pt30 pb20 mb70">
	<div class="container">
		<div class="row">
			<div class=" col-md-6">
				<h4><span>Panier</span></h4>
			</div>
		</div>
	</div>
</div>


<p id="notice"><%= notice %></p>

<div class="container pb60">
	<h4 class="font300 mb30">
		<div class="col">
  		<%= button_to "Vider le panier", @cart, method: :delete, data: {
   		confirm: "Êtes-vous sûr ?" }, class: "btn btn-dark float-right" %>
    </div>

		vous avez ... articles dans votre panier

	</h4>

	<table class="table table-condensed cart-table mb40">
		<thead>
			<tr>
				<th></th>
				<th>Produit</th>
				<th>Prix</th>
				<th>Quantité</th>
				<th>Total</th>
			</tr>
		</thead>

		<tbody>
			<% @cart.line_items.each do |ssss| %>
			<tr>
					<td class="product-image">
						<%= image_tag(ssss.item.image_url, alt: "p1", size:100) %>
					</td>
					<td class="product-name"><%= ssss.item.title %></td>
					<td class="product-price"><%= number_to_currency(ssss.item.price, unit: "€", separator: ",", format: "%n %u") %></td>
					<td class="product-quantity">(x <%= ssss.quantity %>)</td>

					<td class="product-total">
						<span class="badge badge-info"><%= number_to_currency(ssss.total, unit: "€", separator: ",", format: "%n %u") %></span>
					</td>

					<td class="product-delete"><a href="#" data-toggle="tooltip" data-placement="top" title="" data-original-title="Remove this item"><i class="fa fa-times"></i></a></td>
			</tr>
			<% end %>
	 </tbody>
	</table><hr class="mb40">

	<div class="row">
		<div class="col-sm-6">
			<%= button_to "Retour aux produits", root_path, class: "btn btn-outline-secondary" %>
		</div>
		<div class="col-sm-6 text-right">
			<div class="pb20">
				<h3><small>Your Cart Total: <span class="badge badge-info"><%= number_to_currency(@cart.total, unit: "€", separator: ",", format: "%n %u") %></span></small></h3>
			</div>

			<a href="#" class="btn btn-danger" style="color:#fff;">Checkout</a>
      <div><%= button_to "Acheter", new_order_path, method: :get, class: "btn btn-primary" %></div>
      <%= link_to 'Edit', edit_cart_path(@cart) %>

		</div>
	</div>
</div>
